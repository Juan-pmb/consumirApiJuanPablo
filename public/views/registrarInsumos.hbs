    <title>Registrar Insumo</title>
</head>
<body class="bodybg" onload="editarInsumo()">

    {{> header title="Insumos"}}

  <div class="container"> <!--Contenedor Padre-->


    <form class="formularioInt" >
      <!--Contenedor Hijo (AQUÍ ESTÁ NETAMENTE EL FORMULARIO)-->

               <h1 class="textoh1">Registrar Insumo</h1>
               <div class="row"> 
             <div class="col-md-6">

                    <div class="mb-2 form-group">
                       <label for="id" class="form-label fontTtitle">Id insumo <span class="text-danger">*</span></label>
                       <input type="text" class="form-control btnInput" name="id" id="id" oninput="validarIdInsumo()">
                       <div class="msj" id="mensajeErrorId"></div>
                     </div>

                     <div class="mb-2 form-group">
                       <label for="nombreInsumo" class="form-label fontTtitle">Nombre Insumo <span class="text-danger">*</span></label>
                       <input type="text" class="form-control btnInput" name="nombreInsumo" id="nombreInsumo" oninput="validarNombreInsumo()">
                       <div class="msj" id="mensajeError"></div>
                     </div>

                    <div class="mb-2 form-group">
                      <label for=" medidaInsumo" class="form-label fontTtitle">Medidas Insumo <span class="text-danger">*</span></label>
                     <input type="number" min="1"  class="form-control btnInput" name="medidaInsumo" id="medidaInsumo" oninput="validarMedidaInsumo()" required>
                     <div id="mensajeErrorMedInsumo"></div> 
                    </div>
     

                     <div class="mb-2 form-group">
                       <label for="cantidad" class="form-label fontTtitle">Cantidad Insumo <span class="text-danger">*</span></label>
                       <input type="number" min="1"  class="form-control btnInput" name="cantidad" id="cantidad">
                       <div id="mensajeError"></div>
                     </div>

                     
                     <div class="mb-2 form-group">
                      <label for="valorInsumo" class="form-label fontTtitle" >Valor Insumo <span class="text-danger">*</span></label>
                      <input type="number" min="1"  class="form-control btnInput" name="valorInsumo" id="valorInsumo" placeholder="$">
                      <div id="mensajeError"></div>
                    </div>

                    

                    

             </div> 
             
             

             <div class="col-md-6">
              
              <div class="mb-2 form-group">
                <label for="categoriaInsumo" class="form-label fontTtitle">Categoría Insumo  <span class="text-danger">*</span></label>
                <select class="form-select" aria-label="Default select example" id="categoriaInsumo">
                  <option selected></option>
                  <option value="1">Hilos</option>
                  <option value="2">Telas</option>
                  <option value="3">Textiles</option>
                  <option value="4">Agujas</option>
                </select>
              </div>

                    <div class="mb-2 form-group">
                       <label for="stockInsumo" class="form-label fontTtitle">Stock Insumo<span class="text-danger">*</span></label>
                       <input type="number" min="1" class="form-control btnInput" name="stockInsumo" id="stockInsumo" oninput="validarstockInsumo()">
                       <div class="msj" id="mensajeError"></div>
                     </div>
              
               
               <div class="mb-2 form-group">
                <label for="stockMaximo" class="form-label fontTtitle">Stock Máximo  <span class="text-danger">*</span></label>
                <input type="number" min="1"  class="form-control btnInput" name="stockMaximo" id="stockMaximo">
                       <div id="mensajeError"></div>
              </div>

              <div class="mb-2 form-group">
                <label for="stockMinimo" class="form-label fontTtitle">Stock Mínimo  <span class="text-danger">*</span></label>
                <input type="number" min="1"  class="form-control btnInput" name="stockMinimo" id="stockMinimo">
                <div id="mensajeError"></div>
              </div>

              <div class="mb-2 form-group">
                <label for="iva" class="form-label fontTtitle">Iva  <span class="text-danger">*</span></label>
                <input type="number" min="1" class="form-control btnInput" name="iva" id="iva" placeholder="$">
                <div id="mensajeError"></div>
              </div>

       </div>  

           </div>
                           <button type="submit" class="btn btn-light more3" id="btnLimpiar">Limpiar</button> 
                     {{!-- <button type="button" class="btn btnCancelar" id="btnCancelar">Cancelar</button> --}}
                       <a href="/insumos"><button type="button" class="btn btn-light more" id="btnCancelar">Cancelar</button> </a> 
                           <button type="submit" class="btn btn-light more2" id="btnRegistrar">Guardar</button> 
                            <button type="submit" class="btn btn-light more4" id="btnActualizar">Actualizar</button> 
  <!--onclick="validarFormulario()" -->
                       <!--onclick="validarFormulario()" -->
           </form>
    
                   </div>



                 <!--LISTADOS-->
                 
    <div class="containerListar">

      <div class="container2">

              <h2 class="textoh1Listado mt-3">Listado Insumos</h2>
              <!-- <hr class="lineaHorizontal"> -->

              <table class="table table-orientacion" id="tablaInsumos">        <thead>
                    <tr>
                      <td scope="col" class="camposListar ">Id Insumo</td>
                      <td scope="col" class="camposListar ">Nombre Insumo</td>
                      <td scope="col" class="camposListar ">Stock</td>
                      <td scope="col" class="camposListar ">Stock Mínimo</td>
                      <td scope="col" class="camposListar ">Stock Máximo</td>
                      <td scope="col" class="camposListar ">Estado</td>
                      <td scope="col" class="camposListar text-center">operaciones</td>

                    </tr>
                  </thead>
                  <tbody id="contenido">
                  

                  </tbody>
                </table>
                <nav aria-label="Page navigation example" class="pag">
                  <ul class="pagination justify-content-end">
                    <li class="page-item " onclick="previousPage()">
                      <a class="page-link">&laquo;</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item" onclick="nextPage()">
                      <a class="page-link" href="#">&raquo;</a>
                    </li>
                  </ul>
                </nav>

      </div>
      
</div>

{{> footer }}
